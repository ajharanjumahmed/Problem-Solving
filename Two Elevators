#include<bits/stdc++.h>
using namespace std;
 
int main(){
    int t;
    scanf("%d", &t);
    while(t--){
        long long int a,b,c, time1, time2;
        scanf("%lld %lld %lld", &a,&b,&c);
        time1 = (a-1);
        time2 = abs(c-b) + abs(c-1);
        if(time1>time2){
            cout<<2<<endl;
        }
        else if(time2>time1){
            cout<<1<<endl;
        }
        else if(time1==time2){
            cout<<3<<endl;
        }
    }
    return 0;
}

// https://codeforces.com/contest/1729/problem/A
