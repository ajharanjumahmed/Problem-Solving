#include<bits/stdc++.h>
using namespace std;
 
int main()
{
    string s;
    cin >> s;
    int siz = s.size();
    int first = s[0];
    if((first>=65)&&(first<=90)){
        cout<<s[0];
    }
    else{
        printf("%c", first-32);
    }
    for(int i=1; i<siz; i++)
    {
        cout<<s[i];
    }
}

// https://codeforces.com/contest/281/problem/A
