#include<bits/stdc++.h>
using namespace std;
 
int main()
{
    int a,b,c;
    cin>>a>>b>>c;
    if((a>b && a<c) || (a>c && a<b)){
        cout<<(abs(a-b)+abs(a-c));
    }
    else if((b>a && b<c) || (b>c && b<a)){
        cout<<(abs(b-a)+abs(b-c));
    }
    else if((c>a && c<b)||(c>b && b<a)){
        cout<<(abs(c-b)+abs(c-a));
    }
 
}

// https://codeforces.com/contest/723/problem/A
