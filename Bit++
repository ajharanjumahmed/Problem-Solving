#include<bits/stdc++.h>
using namespace std;
 
int main()
{
    int n;
    int cnt = 0;
    cin>>n;
    for(int i=0; i<n; i++){
        string s;
        cin>>s;
        if(s[1]=='+'){
            cnt++;
        }
        else if(s[1] == '-'){
            cnt--;
        }
    }
    cout<<cnt<<endl;
}

// https://codeforces.com/contest/282/problem/A
