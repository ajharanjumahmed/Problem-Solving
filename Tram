
#include<bits/stdc++.h>
using namespace std;
 
int main()
{
    int n;
    cin>>n;
    int sum = 0;
    int maxSum = 0;
    while(n--)
    {
        int a,b;
        cin>>a>>b;
        sum -= a;
        sum += b;
        if(sum>maxSum){
            maxSum = sum;
        }
    }
    cout<<maxSum<<endl;
}

// https://codeforces.com/contest/116/problem/A
